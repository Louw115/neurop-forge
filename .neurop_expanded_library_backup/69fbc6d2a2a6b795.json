  "logic": "def sanitize_html_entities(value: str) -> str:\n    \"\"\"Escape HTML entities in a string.\"\"\"\n    replacements = {\n        '&': '&amp;',\n        '<': '&lt;',\n        '>': '&gt;',\n        '\"': '&quot;',\n        \"'\": '&#x27;'\n    }\n    for char, entity in replacements.items():\n        value = value.replace(char, entity)\n    return value",
