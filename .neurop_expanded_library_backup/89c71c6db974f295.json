  "logic": "def build_search_pattern(terms: list, match_all: bool) -> str:\n    \"\"\"Build regex pattern from terms.\"\"\"\n    escaped = [re.escape(t) for t in terms]\n    if match_all:\n        return \"\".join(f\"(?=.*{t})\" for t in escaped)\n    return \"|\".join(escaped)",
