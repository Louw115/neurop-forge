  "logic": "def extract_snippets(text: str, terms: list, snippet_length: int) -> list:\n    \"\"\"Extract text snippets containing search terms.\"\"\"\n    snippets = []\n    text_lower = text.lower()\n    for term in terms:\n        term_lower = term.lower()\n        idx = text_lower.find(term_lower)\n        while idx != -1:\n            start = max(0, idx - snippet_length // 2)\n            end = min(len(text), idx + len(term) + snippet_length // 2)\n            snippet = text[start:end]\n            if start > 0:\n                snippet = \"...\" + snippet\n            if end < len(text):\n                snippet = snippet + \"...\"\n            if snippet not in snippets:\n                snippets.append(snippet)\n            idx = text_lower.find(term_lower, idx + 1)\n    return snippets",
