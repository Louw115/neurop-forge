  "logic": "def sanitize_html(html: str) -> str:\n    \"\"\"Escape HTML special characters.\"\"\"\n    return (html\n        .replace(\"&\", \"&amp;\")\n        .replace(\"<\", \"&lt;\")\n        .replace(\">\", \"&gt;\")\n        .replace('\"', \"&quot;\")\n        .replace(\"'\", \"&#39;\"))",
