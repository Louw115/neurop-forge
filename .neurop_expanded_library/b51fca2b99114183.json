  "logic": "def calculate_total_max_delay(base_delay: float, max_attempts: int, strategy: str, max_delay: float) -> float:\n    \"\"\"Calculate maximum possible total delay.\"\"\"\n    total = 0\n    for attempt in range(1, max_attempts + 1):\n        delay = get_next_delay(\n            {\"attempt\": attempt - 1, \"base_delay\": base_delay, \"max_attempts\": max_attempts},\n            strategy,\n            max_delay\n        )\n        total += delay\n    return total",
