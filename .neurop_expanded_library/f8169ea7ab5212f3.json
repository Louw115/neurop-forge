  "logic": "def get_http_method_for_action(action: str) -> str:\n    \"\"\"Get the appropriate HTTP method for an action.\"\"\"\n    action_methods = {\n        \"list\": \"GET\",\n        \"get\": \"GET\",\n        \"show\": \"GET\",\n        \"create\": \"POST\",\n        \"store\": \"POST\",\n        \"update\": \"PUT\",\n        \"replace\": \"PUT\",\n        \"patch\": \"PATCH\",\n        \"modify\": \"PATCH\",\n        \"delete\": \"DELETE\",\n        \"destroy\": \"DELETE\",\n        \"search\": \"GET\",\n        \"export\": \"GET\",\n        \"import\": \"POST\",\n    }\n    return action_methods.get(action.lower(), \"GET\")",
