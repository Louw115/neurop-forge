  "logic": "def exponential_backoff(base_delay: float, attempt: int, max_delay: float) -> float:\n    \"\"\"Calculate exponential backoff delay.\"\"\"\n    delay = base_delay * (2 ** attempt)\n    return min(delay, max_delay)",
