  "logic": "def matches_term(text: str, term: str, exact: bool) -> bool:\n    \"\"\"Check if text matches search term.\"\"\"\n    text_lower = text.lower()\n    term_lower = term.lower()\n    if exact:\n        return term_lower == text_lower\n    return term_lower in text_lower",
