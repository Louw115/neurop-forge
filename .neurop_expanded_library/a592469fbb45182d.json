  "logic": "def escape_json_string(text: str) -> str:\n    \"\"\"Escape special characters for JSON string.\"\"\"\n    if not text:\n        return \"\"\n    return (text\n            .replace('\\\\', '\\\\\\\\')\n            .replace('\"', '\\\\\"')\n            .replace('\\n', '\\\\n')\n            .replace('\\r', '\\\\r')\n            .replace('\\t', '\\\\t'))",
