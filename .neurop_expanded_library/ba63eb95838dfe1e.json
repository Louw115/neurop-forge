  "logic": "def escape_regex(text: str) -> str:\n    \"\"\"Escape special regex characters in text.\"\"\"\n    if not text:\n        return \"\"\n    special = r'\\.^$*+?{}[]|()/'\n    return ''.join('\\\\' + c if c in special else c for c in text)",
