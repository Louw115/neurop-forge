  "logic": "def format_number_locale(v0: float, v1: str, v2: int) -> str:\n    v3 = ',' if v1.startswith(('de', 'fr', 'es', 'it', 'pt', 'nl')) else '.'\n    v4 = '.' if v3 == ',' else ','\n    v5 = f'{v0:,.{v2}f}'\n    if v3 == ',':\n        v5 = v5.replace(',', 'TEMP').replace('.', ',').replace('TEMP', '.')\n    return v5",
