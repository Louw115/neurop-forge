  "logic": "def to_base(number: int, base: int) -> str:\n    \"\"\"Convert integer to string in given base.\"\"\"\n    if number == 0:\n        return \"0\"\n    if base < 2 or base > 62:\n        return \"\"\n    is_negative = number < 0\n    number = abs(number)\n    result = []\n    while number > 0:\n        result.append(DIGITS[number % base])\n        number //= base\n    if is_negative:\n        result.append(\"-\")\n    return \"\".join(reversed(result))",
