  "logic": "def build_mongodb_update(field: str, value, operator: str) -> dict:\n    \"\"\"Build a MongoDB update operation.\"\"\"\n    operator_map = {\n        \"set\": \"$set\",\n        \"unset\": \"$unset\",\n        \"inc\": \"$inc\",\n        \"push\": \"$push\",\n        \"pull\": \"$pull\",\n        \"addToSet\": \"$addToSet\",\n        \"pop\": \"$pop\",\n        \"rename\": \"$rename\",\n        \"min\": \"$min\",\n        \"max\": \"$max\",\n        \"mul\": \"$mul\"\n    }\n    mongo_op = operator_map.get(operator, \"$set\")\n    return {mongo_op: {field: value}}",
