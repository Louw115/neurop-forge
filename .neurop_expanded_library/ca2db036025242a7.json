  "logic": "def update_circuit_breaker(v0: dict, v1: bool, v2: float) -> dict:\n    if v0['state'] == 'open':\n        if v2 - v0['last_failure_time'] >= v0['reset_timeout']:\n            return {**v0, 'state': 'half-open', 'success_count': 0}\n        return v0\n    if v0['state'] == 'half-open':\n        if v1:\n            return {**v0, 'state': 'closed', 'failures': 0, 'success_count': v0['success_count'] + 1}\n        else:\n            return {**v0, 'state': 'open', 'last_failure_time': v2}\n    if v1:\n        return {**v0, 'failures': 0}\n    else:\n        v3 = v0['failures'] + 1\n        if v3 >= v0['failure_threshold']:\n            return {**v0, 'state': 'open', 'failures': v3, 'last_failure_time': v2}\n        return {**v0, 'failures': v3}",
