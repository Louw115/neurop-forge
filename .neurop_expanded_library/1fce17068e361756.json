  "logic": "def sanitize_string_input(value: str, max_length: int, strip_html: bool) -> str:\n    \"\"\"Sanitize string input.\"\"\"\n    import re\n    result = value.strip()\n    if strip_html:\n        result = re.sub(r'<[^>]+>', '', result)\n    if len(result) > max_length:\n        result = result[:max_length]\n    return result",
