  "logic": "def format_currency_locale(v0: float, v1: str, v2: str) -> str:\n    v3 = {'USD': '$', 'EUR': '\u20ac', 'GBP': '\u00a3', 'JPY': '\u00a5', 'CNY': '\u00a5'}\n    v4 = v3.get(v1, v1)\n    v5 = v6(v0, v2, 2)\n    v7 = v2.startswith(('en', 'zh', 'ja'))\n    if v7:\n        return f'{v4}{v5}'\n    return f'{v5} {v4}'",
