  "logic": "def to_scientific_notation(number: float, precision: int) -> str:\n    \"\"\"Convert to scientific notation.\"\"\"\n    if number == 0:\n        return \"0e+0\"\n    import math\n    exp = math.floor(math.log10(abs(number)))\n    mantissa = number / (10 ** exp)\n    return f\"{mantissa:.{precision}f}e{exp:+d}\"",
