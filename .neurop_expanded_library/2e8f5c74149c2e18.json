  "logic": "def calculate_retry_connection_delay(attempt: int, base_delay_ms: int, max_delay_ms: int) -> int:\n    \"\"\"Calculate delay before retry connection attempt.\"\"\"\n    delay = base_delay_ms * (2 ** attempt)\n    return min(delay, max_delay_ms)",
