  "logic": "def retry_result(attempts: int, max_attempts: int, last_error: str, success: bool) -> dict:\n    \"\"\"Build retry result.\"\"\"\n    return {\n        \"success\": success,\n        \"attempts\": attempts,\n        \"max_attempts\": max_attempts,\n        \"should_retry\": not success and attempts < max_attempts,\n        \"last_error\": last_error\n    }",
