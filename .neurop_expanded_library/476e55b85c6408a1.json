  "logic": "def evaluate_condition(v0: dict, v1: dict) -> bool:\n    v2 = v0.get('field')\n    v3 = v0.get('operator')\n    v4 = v0.get('value')\n    v5 = v1.get(v2)\n    if v3 == 'equals':\n        return v5 == v4\n    elif v3 == 'not_equals':\n        return v5 != v4\n    elif v3 == 'greater_than':\n        return v5 > v4\n    elif v3 == 'less_than':\n        return v5 < v4\n    elif v3 == 'contains':\n        return v4 in v5 if v5 else False\n    elif v3 == 'in':\n        return v5 in v4 if v4 else False\n    return False",
