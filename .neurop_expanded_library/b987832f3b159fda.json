  "logic": "def build_mongodb_filter(field: str, operator: str, value) -> dict:\n    \"\"\"Build a MongoDB filter condition.\"\"\"\n    operator_map = {\n        \"eq\": \"$eq\",\n        \"ne\": \"$ne\",\n        \"gt\": \"$gt\",\n        \"gte\": \"$gte\",\n        \"lt\": \"$lt\",\n        \"lte\": \"$lte\",\n        \"in\": \"$in\",\n        \"nin\": \"$nin\",\n        \"exists\": \"$exists\",\n        \"regex\": \"$regex\"\n    }\n    mongo_op = operator_map.get(operator, \"$eq\")\n    if operator == \"eq\":\n        return {field: value}\n    return {field: {mongo_op: value}}",
