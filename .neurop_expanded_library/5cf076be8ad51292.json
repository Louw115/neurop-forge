  "logic": "def truncate_words(text: str, max_words: int, suffix: str) -> str:\n    \"\"\"Truncate to max words.\"\"\"\n    words = text.split()\n    if len(words) <= max_words:\n        return text\n    return \" \".join(words[:max_words]) + suffix",
