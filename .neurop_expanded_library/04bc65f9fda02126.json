  "logic": "def check_resource_access(rules: list, resource: str, action: str, context: dict) -> bool:\n    \"\"\"Check if access is allowed for resource action.\"\"\"\n    for rule in rules:\n        if rule[\"resource\"] == resource and rule[\"action\"] in [action, \"*\"]:\n            result = evaluate_access_rule(rule, context)\n            if result == \"deny\":\n                return False\n            if result == \"allow\":\n                return True\n    return False",
