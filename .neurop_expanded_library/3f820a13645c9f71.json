  "logic": "def validate_sort_param(v0: str, v1: list) -> dict:\n    if not v0:\n        return {'valid': True, 'error': None}\n    v2 = v0.lstrip('-').lstrip('+')\n    if v2 not in v1:\n        return {'valid': False, 'error': f\"Cannot sort by {v2}. Allowed: {', '.join(v1)}\"}\n    return {'valid': True, 'error': None}",
